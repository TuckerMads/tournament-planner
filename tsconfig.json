{
  "compilerOptions": {
    "target": "ES2020", // Use modern JS syntax
    "module": "CommonJS", // Needed for Node.js
    "rootDir": "./", // Source files live at the root or nested folders
    "outDir": "./dist", // All compiled JS goes into dist/
    "strict": true, // Enable strict type-checking
    "esModuleInterop": true, // Allow default import from CJS modules
    "forceConsistentCasingInFileNames": true, // Prevent issues on case-insensitive FS
    "skipLibCheck": true // Skip type-checking node_modules
  },
  "include": [
    "**/*.ts"
  ], // Compile all .ts files
  "exclude": [
    "node_modules",
    "dist",
    "public"
  ] // Don't compile output or static frontend
}